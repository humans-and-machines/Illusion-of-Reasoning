[MASTER]
ignore=__pycache__
init-hook='import sys, os; sys.path.insert(0, os.path.abspath("src"))'
ignored-modules=
    torch,
    transformers,
    trl,
    accelerate,
    datasets,
    peft,
    deepspeed,
    bitsandbytes,
    vllm,
    wandb,
    numpy,
    requests,
    distilabel,
    huggingface_hub

[FORMAT]
max-line-length=100
max-module-lines=2500

[DESIGN]
# Config dataclasses (training args, configs) legitimately carry many fields.
# Relax the instance-attribute limit project-wide instead of scattering
# inline disables on each config class.
max-attributes=20

[REPORTS]
score=yes

[MESSAGES CONTROL]
