{
  "train_micro_batch_size_per_gpu": 1,
  "gradient_accumulation_steps": 1,
  "gradient_clipping": 1.0,

  "zero_optimization": {
    "stage": 3,
    "overlap_comm": true,
    "contiguous_gradients": true,

    // much smaller buckets → lower peak VRAM during reduce/gather
    "reduce_bucket_size": 33554432,                // 32 MB
    "stage3_prefetch_bucket_size": 33554432,       // 32 MB

    // keep *nothing* resident on GPU between steps
    "stage3_param_persistence_threshold": 0,

    // *** Offload both params & optimizer to CPU ***
    "offload_param":     { "device": "cpu", "pin_memory": true },
    "offload_optimizer": { "device": "cpu", "pin_memory": true },

    // (optional) NVMe offload if CPU RAM is tight:
    // "offload_param":     { "device": "nvme", "nvme_path": "/n/fs/similarity/.deepspeed_nvme", "pin_memory": true },
    // "offload_optimizer": { "device": "nvme", "nvme_path": "/n/fs/similarity/.deepspeed_nvme", "pin_memory": true }
    // Make sure the folder exists and is on a fast SSD.
    // Also consider adding "buffer_count": 4, "fast_init": true for NVMe.
    "sub_group_size": 1
  },

  "bf16": { "enabled": true },
  "fp16": { "enabled": false },

  // Disable ZeRO’s wall-clock breakdown to save a bit of overhead
  "wall_clock_breakdown": false
}

